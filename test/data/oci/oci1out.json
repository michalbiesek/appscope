{
	"process":	{
		"env":	["LD_PRELOAD=/opt/appscope/libscope.so", "SCOPE_SETUP_DONE=true"]
	},
	"mounts":	[{
			"destination":	"/opt/scope",
			"type":	"bind",
			"source":	"/tmp/appscope/dev/scope",
			"options":	["rbind", "rprivate"]
		}],
	"hooks":	{
		"startContainer":	[{
				"path":	"/opt/scope",
				"args":	["/opt/scope", "extract", "-p", "/opt/appscope"]
			}]
	}
}