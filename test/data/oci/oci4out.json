{
	"process":	{
		"env":	["PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin", "LD_PRELOAD=/opt/appscope/libscope.so", "SCOPE_SETUP_DONE=true"]
	},
	"mounts":	[{
			"destination":	"/proc",
			"type":	"proc",
			"source":	"proc",
			"options":	["nosuid", "noexec", "nodev"]
		}, {
			"destination":	"/opt/scope",
			"type":	"bind",
			"source":	"/tmp/appscope/dev/scope",
			"options":	["rbind", "rprivate"]
		}],
	"hooks":	{
		"startContainer":	[{
				"path":	"/opt/scope",
				"args":	["/opt/scope", "extract", "-p", "/opt/appscope"]
			}]
	}
}